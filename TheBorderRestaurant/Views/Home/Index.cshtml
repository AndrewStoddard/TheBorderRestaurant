@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col order-first"></div>
    <div class="col">
        <div id="carouselExampleIndicators" class="carousel slide rounded m-2" data-ride="carousel"  style="width: 640px; height: 427px;">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://static.wixstatic.com/media/77fc33_eafe3fc5016a6bf99e79f167708440a3.jpg/v1/fill/w_640,h_427,al_c,q_80,usm_0.66_1.00_0.01/77fc33_eafe3fc5016a6bf99e79f167708440a3.webp" class="d-block" style="width: 640px; height: 427px;">
                </div>
                <div class="carousel-item">
                    <img src="https://static.wixstatic.com/media/77fc33_604b9e0001cd2e9a34d39e5adb606bb8.jpg/v1/fill/w_640,h_427,al_c,q_80,usm_0.66_1.00_0.01/77fc33_604b9e0001cd2e9a34d39e5adb606bb8.webp" class="d-block" style="width: 640px; height: 427px;">
                </div>
                <div class="carousel-item">
                    <img src="https://static.wixstatic.com/media/77fc33_790d24da5dbe89261a3446c2f2de7fa0.jpg/v1/fill/w_640,h_427,al_c,q_80,usm_0.66_1.00_0.01/77fc33_790d24da5dbe89261a3446c2f2de7fa0.webp" class="d-block" style="width: 640px; height: 427px;">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="jumbotron rounded m-2" style="width: 640px;">
            <h1>Voted Best Mexican Catering!</h1>
        </div>
    </div>
    <div class="col order-last">
        <a class="btn btn-danger btn-lg w-100 m-2" asp-action="Index" asp-controller="Home">Order Carryout</a> <br />
        <a class="btn btn-danger btn-lg w-100 m-2" asp-action="Index" asp-controller="Home">Order Delivery</a> <br />
        <div class="card w-100 m-2">
            <img src="https://static.wixstatic.com/media/77fc33_e598e7765df89ea2d19e94279106be2a.jpg/v1/fill/w_260,h_145,al_c,q_80,usm_0.66_1.00_0.01/77fc33_e598e7765df89ea2d19e94279106be2a.webp" class="card-img-top rounded p-1">
            <div class="card-body" style="background-color: red; color: white;">
                <h5 class="card-title">Desserts</h5>
                <p class="card-text">9 different dessert Chimichangas!</p>
            </div>
        </div>
        <div class="card w-100 m-2">
            <img src="https://static.wixstatic.com/media/77fc33_3ed00ed16247fa3e2bfd18f29e4e7b63.jpg/v1/fill/w_260,h_145,al_c,q_80,usm_0.66_1.00_0.01/77fc33_3ed00ed16247fa3e2bfd18f29e4e7b63.webp" class="card-img-top rounded p-1">
            <div class="card-body" style="background-color: red; color: white;">
                <h5 class="card-title">Specials</h5>
                <p class="card-text">$4.50 everyday LUNCH specials!</p>
